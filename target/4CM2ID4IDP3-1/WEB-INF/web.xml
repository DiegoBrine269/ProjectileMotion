<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <description>Location to store uploaded file</description>
        <param-name>file-upload</param-name>
        <param-value>
           c:\background-images\
        </param-value>
    </context-param>
    <servlet>
        <servlet-name>Consultar</servlet-name>
        <servlet-class>Servlets_CRUD.Consultar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConexionBD</servlet-name>
        <servlet-class>Servlets_CRUD.ConexionBD</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Actualizar</servlet-name>
        <servlet-class>Servlets_CRUD.Actualizar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Eliminar</servlet-name>
        <servlet-class>Servlets_CRUD.Eliminar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Insertar</servlet-name>
        <servlet-class>Servlets_CRUD.Insertar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Session.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadServlet</servlet-name>
        <servlet-class>SubidaArchivos.UploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileUploader</servlet-name>
        <servlet-class>SubidaArchivos.FileUploader</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MultiPartformData</servlet-name>
        <servlet-class>SubidaArchivos.MultiPartformData</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultarArchivos</servlet-name>
        <servlet-class>SubidaArchivos.ConsultarArchivos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Consultar</servlet-name>
        <url-pattern>/Consultar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConexionBD</servlet-name>
        <url-pattern>/ConexionBD</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Actualizar</servlet-name>
        <url-pattern>/Actualizar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Eliminar</servlet-name>
        <url-pattern>/Eliminar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Insertar</servlet-name>
        <url-pattern>/Insertar</url-pattern>
        <http-method>POST</http-method>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadServlet</servlet-name>
        <url-pattern>/UploadServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileUploader</servlet-name>
        <url-pattern>/FileUploader</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MultiPartformData</servlet-name>
        <url-pattern>/MultiPartformData</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultarArchivos</servlet-name>
        <url-pattern>/ConsultarArchivos</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
